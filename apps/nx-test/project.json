{
  "name": "nx-test",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/nx-test",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/nx-test"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/nx-test"
        },
        "production": {}
      }
    },
  },
  "container": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "commands": [
          "docker build -t  -f ./Dockerfile .",
          "docker tag nx-test:latest {args.ecrAddress}/nx-test:latest",
          "docker tag nx-test:latest {args.ecrAddress}/nx-test:develop",
          "docker push {args.ecrAddress}/nx-test:latest",
          "docker push {args.ecrAddress}/nx-test:develop"
        ]
      }
    },
  "tags": []
}
